<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_margin="6dp"
    android:elevation="7dp"
    android:clickable="true"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="6dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/row_eventName"
            android:textSize="20sp"
            android:gravity="center"
            android:layout_marginLeft="150dp"
            android:textStyle="bold"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/row_depurturename"
            android:textSize="16sp"
            android:layout_below="@id/row_eventName"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/row_destination"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/row_depurturename"

            android:textSize="16sp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/row_budget"
            android:text="budget"
            android:layout_below="@id/row_departureDate"
            android:textSize="16sp"
            android:textStyle="bold"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/currenttime"
            android:text="currwnt itme"
            android:layout_below="@id/row_budget"
            android:textSize="16sp"
            android:textStyle="bold"/>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/row_departureDate"
            android:textSize="12sp"
            android:text="depurturedare"
            android:layout_below="@id/row_destination"
            android:textStyle="italic"/>

        <TextView
            android:id="@+id/row_remaining"
            android:layout_width="44dp"
            android:layout_height="32dp"
            android:layout_alignStart="@+id/row_depurturename"
           android:text="remaining date"
            android:layout_alignParentTop="true"
            android:layout_marginStart="178dp"
            android:layout_marginTop="52dp"
            android:textSize="12sp"
            android:textStyle="italic" />

        <TextView
            android:id="@+id/row_menu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="&#8942;"
            android:textSize="25sp"
            android:textStyle="bold"
            android:layout_alignParentEnd="true"
            android:padding="20dp"
            android:layout_centerInParent="true"/>

    </RelativeLayout>

</androidx.cardview.widget.CardView>