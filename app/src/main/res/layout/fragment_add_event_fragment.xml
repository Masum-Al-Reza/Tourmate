<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Add_event_fragment">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="create your tour plan"
        android:textColor="@color/colorPurple"
        android:textColorHint="#A61E1E"
        android:textSize="33sp"
        android:textStyle="bold" />
    <View
        android:layout_gravity="center"
        android:layout_width="210dp"
        android:layout_height="1dp"
        android:background="@color/colorAccent"
        />
    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_marginTop="20dp"
        android:layout_height="wrap_content">
        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColorHint="@color/colorPurple"

            android:id="@+id/inputeventname"
            android:gravity="center"
            android:textColor="@color/colorAccent"
            android:hint="enter event name"/>

    </com.google.android.material.textfield.TextInputLayout>
    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/departureinput"
            android:textColorHint="@color/colorPurple"

            android:gravity="center"
            android:textColor="@color/colorAccent"
            android:hint="Start location"/>

    </com.google.android.material.textfield.TextInputLayout>
    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/inputdestination"
            android:textColorHint="@color/colorPurple"

            android:gravity="center"
            android:textColor="@color/colorAccent"
            android:hint="enter destination"/>

    </com.google.android.material.textfield.TextInputLayout>
    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/inputbudget"
            android:inputType="number"
            android:gravity="center"
            android:textColorHint="@color/colorPurple"

            android:textColor="@color/colorAccent"
            android:hint="enter budget"/>

    </com.google.android.material.textfield.TextInputLayout>
    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <com.google.android.material.textfield.TextInputEditText
            android:focusable="false"
            android:inputType="text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableRight="@drawable/ic_keyboard_arrow_down_black_24dp"
            android:id="@+id/add_dateBTN"
            android:text="depurture date"
            android:gravity="center"
            />

    </com.google.android.material.textfield.TextInputLayout>

    <Button
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_ui"
        android:layout_marginTop="20dp"
        android:text="Add Event"
        android:id="@+id/eventaddBTn"
        android:textAllCaps="false"
        android:layout_gravity="center"
        android:textColor="@color/colorWhite" />
    <Button
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_ui"
        android:text="Update Event"
        android:id="@+id/upateEventBtn"
        android:layout_marginTop="20dp"
        android:textAllCaps="false"
        android:layout_gravity="center"
        android:visibility="gone"
        android:textColor="@color/colorWhite" />

    <ImageView
        android:id="@+id/circle3"
        android:layout_width="182dp"
        android:layout_height="182dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="-80dp"
        android:layout_marginBottom="-90dp"
        android:src="@drawable/circle" />
    <ImageView
        android:id="@+id/circle1"
        android:layout_width="134dp"
        android:layout_height="134dp"
        android:layout_below="@+id/bgHeader"
        android:layout_marginLeft="285dp"
        android:layout_marginTop="-5dp"
        android:src="@drawable/circletransparant" />


</LinearLayout>